# ┌──────────── Rails (my_api) ────────────────────────────────────────────────
# Ignore Bundler config and gems
/my_api/.bundle/
/my_api/vendor/bundle/

# Ignore SQLite databases (if any)
/my_api/db/*.sqlite3
/my_api/db/*.sqlite3-journal

# Ignore logs and temp files
/my_api/log/*
/my_api/tmp/*
